<h1>Details of the lists</h1>

<ul>
  <% @lists.each do |list| %>
  <li><%= link_to list.name, list_path(list) %> -
      <%= link_to list_path(list), data: {turbo_method: :delete, turbo_confirm: 'Are you sure brooo ??'} do %>
      <i class="fa fa-trash"></i>
    <% end %>
  </li>
  <% end %>
</ul>

