<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(BanniÃ¨re.png);">
  <div class="container text-center m-4">
    <h1 class="mb-4"><strong>W A T C H E R S</strong></h1>
    <p class="mb-5">Create & share your movie list, enhance your nights !</p>
    <%= link_to 'Create a list', new_list_path, class:"btn btn-ghost" %>
  </div>
</div>

<div class="cards my-2">
  <% @lists.each do |list| %>
    <div class="card-category position-relative" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : 'https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg' %>)">
      <div class="text-start">
        <%= link_to list.name, list_path(list), class:"text-decoration-none text-white"%>
      </div>
      <div class="position-absolute top-0 start-0 px-2 py-2">
      </div>
      <div class="position-absolute top-0 end-0 px-2 py-2">
        <%= link_to list_path(list), class:"text-white", data: {turbo_method: :delete, turbo_confirm: 'Are you sure brooo ??'} do %>
          <i class="fa-duotone fa-solid fa-xmark" style="--fa-secondary-opacity: 0.6;"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
