
<%= link_to lists_path do %>
  <i class="back-btn fa-solid fa-angle-left fa-xl position-absolute start-0 top-0 px-5 py-5" style="color: #ffffff;"></i>
<% end %>

<div class="container d-flex justify-content-center">
  <div class="feedback-form">
    <h2 class="header">Do your list</h2>
    <div>
      <%= simple_form_for(@list) do |f| %>
          <%= f.input :name, class:"mb-3 gorm-group"%>
          <%= f.input :photo, as: :file, class:"mb-3" %>
          <%= f.button :submit, class:"text-center button btn btn-ghost" %>
      <% end %>
    </div>
  </div>
</div>
