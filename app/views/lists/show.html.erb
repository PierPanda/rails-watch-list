<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @list.photo.attached? ? cl_image_path(@list.photo.key) : 'https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg' %>)";>
  <div class="container mb-2">
    <h1>Welcome to <strong><%= @list.name %></strong></h1>
    <div class="mt-3">
      <%= link_to "Add a movie ?", new_list_bookmark_path(@list), class:"text-decoration-none btn-ghost" %>
      <%= link_to 'Edit my list', edit_list_path(@list), class:"text-decoration-none btn-ghost" %>
      <%= link_to "Back to lists", root_path(@list), class:"text-decoration-none btn-ghost" %>
    </div>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-md-10 mt-1">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-product my-1 d-flex space-aroud">
        <%=image_tag(bookmark.movie.poster_url)%>
        <div class="card-product-infos ">
          <h2><%= bookmark.movie.title %> - <em id="rating"><%= bookmark.movie.rating %>/10</em></h2>
          <p id="bookmark-comment"><%= bookmark.comment%></p>
          <div class="position-absolute top-0 end-0 px-2 py-2">
            <%= link_to bookmark_path(bookmark), class:"", data: {turbo_method: :delete, turbo_confirm: 'Are you sure brooo ??'} do %>
              <i class="fa-regular fa-trash-can" style="color: #000000;"></i>
            <% end %>
          </div>
          <div class="position-absolute bottom-0 end-0 px-2 py-2">
            <%= link_to edit_bookmark_path(bookmark) do %>
              <i class="fa-regular fa-pen-to-square fa-rotate-by" style="color: #000000; --fa-rotate-angle: 0000deg;"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
